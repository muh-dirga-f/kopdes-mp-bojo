<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login - Koperasi</title>

  <!-- Vendor CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.2/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/startbootstrap-sb-admin-2@4.1.4/css/sb-admin-2.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.css" />

  <!-- Custom styles -->
  <style>
    /* Kartu dengan efek glass */
    .card-login {
      border: 0;
      border-radius: 1rem;
      overflow: hidden;
      backdrop-filter: blur(6px);
      background: rgba(255, 255, 255, 0.92);
      box-shadow: 0 20px 45px rgba(0,0,0,.15);
    }

    /* Header brand */
    .brand-header {
      /* background: linear-gradient(135deg, #dc3545 0%, #ff6b6b 100%); */
      color: #fff;
      padding: 2rem 1.75rem 1.5rem;
      position: relative;
      text-align: center;
    }
    .brand-logo {
      width: 64px; height: 64px;
      border-radius: 50%;
      display: inline-flex;
      align-items: center; justify-content: center;
      background: rgba(255,255,255,.2);
      margin-bottom: .75rem;
    }
    .brand-logo i { font-size: 28px; }
    .brand-title {
      font-weight: 700; letter-spacing: .4px;
      margin: .25rem 0 0;
    }
    .brand-subtitle {
      font-size: .9rem; opacity: .95; margin-top: .25rem;
    }

    /* Area form */
    .login-body {
      padding: 1.75rem;
    }
    .form-control-user {
      border-radius: .65rem !important;
      padding: 0.85rem 1rem;
    }
    .input-group .form-control {
      border-right: 0;
    }
    .input-group .input-group-append .btn {
      border-left: 0;
      border-color: #ced4da;
    }

    /* Tombol utama */
    .btn-login {
      border-radius: .65rem;
      padding: .8rem 1rem;
      font-weight: 600;
      box-shadow: 0 8px 18px rgba(220,53,69,.25);
    }
    .btn-login:hover {
      transform: translateY(-1px);
      box-shadow: 0 12px 22px rgba(220,53,69,.35);
    }

    /* Link kecil di bawah */
    .login-meta a {
      color: #dc3545;
    }

    /* Fokus aksesibilitas */
    .form-control:focus, .btn:focus {
      box-shadow: 0 0 0 .2rem rgba(220,53,69,.25), 0 6px 16px rgba(0,0,0,.08) !important;
    }

    /* Kartu lebih ramping di layar besar */
    @media (min-width: 992px) {
      .card-login { transform: translateY(10px); }
    }
  </style>
</head>
<body class="bg-danger">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-5 col-lg-6 col-md-8">
        <div class="card card-login my-5">
          <!-- BRAND HEADER -->
          <div class="brand-header bg-danger">
            <div class="brand-logo">
              <!-- Ganti ikon/fa sesuai brand kamu atau pasang <img src="/path/logo.png" alt="Logo Koperasi" class="img-fluid rounded-circle"> -->
              <i class="fas fa-coins" aria-hidden="true"></i>
            </div>
            <h1 class="h4 brand-title mb-0">Koperasi Desa Merah Putih Bojo</h1>
            <!-- <div class="brand-subtitle">Portal Anggota &amp; Admin</div> -->
          </div>

          <!-- BODY -->
          <div class="card-body p-0">
            <div class="login-body">
              <div class="text-center mb-3">
                <h2 class="h5 text-gray-900 mb-1">Selamat Datang Kembali</h2>
                <p class="mb-0 text-muted" style="font-size:.95rem">Masuk untuk melanjutkan aktivitas Anda</p>
              </div>

              <% if (error) { %>
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                  <i class="fas fa-exclamation-triangle mr-2"></i>
                  <span><%= error %></span>
                </div>
              <% } %>

              <form class="user" method="post" action="/login" novalidate>
                <!-- Email -->
                <div class="form-group">
                  <label class="sr-only" for="email">Email</label>
                  <input
                    id="email"
                    type="email"
                    class="form-control form-control-user"
                    name="email"
                    placeholder="Email"
                    value="<%= email %>"
                    required
                    autocomplete="username" />
                </div>

                <!-- Password + toggle eye -->
                <div class="form-group">
                  <label class="sr-only" for="password">Password</label>
                  <div class="input-group">
                    <input
                      id="password"
                      type="password"
                      class="form-control form-control-user"
                      name="password"
                      placeholder="Password"
                      required
                      minlength="6"
                      autocomplete="current-password" />
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary" type="button" id="togglePassword" aria-label="Tampilkan password">
                        <i class="far fa-eye"></i>
                      </button>
                    </div>
                  </div>
                </div>

                <!-- Submit -->
                <button class="btn btn-danger btn-user btn-block btn-login" type="submit">
                  <i class="fas fa-sign-in-alt mr-1"></i> Masuk
                </button>
              </form>

            </div>
          </div>

          <!-- Footnote kecil -->
          <div class="text-center py-3" style="background:#fff">
            <small class="text-muted">Â© <span id="year"></span> Koperasi Desa Merah Putih Bojo</small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Vendor JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.2/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/startbootstrap-sb-admin-2@4.1.4/js/sb-admin-2.min.js"></script>

  <!-- Enhancements -->
  <script>
    // Tahun otomatis
    document.getElementById('year').textContent = new Date().getFullYear();

    // Toggle show/hide password
    (function () {
      var btn = document.getElementById('togglePassword');
      var input = document.getElementById('password');
      if (!btn || !input) return;
      btn.addEventListener('click', function () {
        var isPwd = input.getAttribute('type') === 'password';
        input.setAttribute('type', isPwd ? 'text' : 'password');
        this.innerHTML = isPwd ? '<i class="far fa-eye-slash"></i>' : '<i class="far fa-eye"></i>';
        this.setAttribute('aria-label', isPwd ? 'Sembunyikan password' : 'Tampilkan password');
      });
    })();
  </script>
</body>
</html>
